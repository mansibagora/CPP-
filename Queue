#include<iostream>
using namespace std;
int main()
{
  int n,m;
  cin>>n>>m;
  int a[n];
  for(int i=0;i<n;i++)
  {
  cin>>a[i];
  }
  int sum=0;
  for(int i=0;i<n;i++)
  {
  sum=sum+a[i];
    
  }
  if(n==1 && m==2)
  {
  cout<<"1";
  }
  else
  {
  cout<<(sum/m)+1;
  
  }
  //Type your code here.
}
